<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/apk/res-auto">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#424242"
    >
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:id="@+id/imageView_shop"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="    Branches"
        android:textSize="@dimen/_7sdp"
        android:textColor="#FFFFFF"
        android:layout_below="@id/imageView_shop"
        android:layout_marginTop="25dp"
        />

    <Spinner
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:id="@+id/spinner_branch"
        android:layout_below="@+id/imageView_shop"
        android:gravity="center"
        android:textAlignment="center"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/spinner">
    </Spinner>

    <android.support.v7.widget.CardView
        android:id="@+id/card_view_mobile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#e0e0e0"
        android:layout_margin="8dp"
        card_view:cardCornerRadius="20dp"
        android:layout_marginTop="59dp"
        android:layout_below="@+id/spinner_branch"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:id="@+id/id_Shop_adress"
            android:text=" adress "
            android:gravity="center"
            android:textSize="20dp"
            android:textColor="#000000"
            android:background="#BDBDBD"
            />


        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="65dp"
            android:layout_marginLeft="20dp"
            android:background="@mipmap/mobile"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="@dimen/_15sdp"
            android:text =""
            android:gravity="center"
            android:textSize="25dp"
            android:textColor="#000000"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/id_mobile"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_marginLeft="30dp"
            android:text ="mobile"
            android:gravity="center"
            android:textSize="25dp"
            android:textColor="#000000"
            />

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="105dp"
            android:layout_marginLeft="20dp"
            android:background="@mipmap/mapicon"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/id_map"
            android:layout_marginTop="@dimen/_30sdp"
            android:layout_marginLeft="30dp"
            android:text ="adress"
            android:gravity="center"
            android:textSize="25dp"
            android:textColor="#000000"
            />
    </android.support.v7.widget.CardView>

</RelativeLayout>
</ScrollView>
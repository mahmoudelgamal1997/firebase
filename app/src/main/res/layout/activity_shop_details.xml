<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/apk/res-auto">
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/relative1"

        tools:context="com.example2017.android.firebase.shop_details">

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#cecdcd">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:id="@+id/imageView3"
                android:scaleType="fitXY"
                android:layout_row="0"
                android:layout_column="1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Large Text"
                android:textSize="40dp"
                android:id="@+id/title_text"
                android:layout_row="1"
                android:layout_column="1"
                android:layout_gravity="center_horizontal"
                android:textColor="#FFF64747" />

            <android.support.v7.widget.CardView
                android:id="@+id/card_view_adress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#cecdcd"
                android:layout_margin="8dp"
                card_view:cardCornerRadius="10dp"
                android:layout_marginTop="89dp"
                android:layout_column="1"
                android:layout_row="1"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/id_Shop_adress"
                    android:text="adress"
                    android:textSize="25dp"
                    android:textColor="#000000"
                    android:layout_marginLeft="10dp"
                    />
            </android.support.v7.widget.CardView>




            <android.support.v7.widget.CardView
                android:id="@+id/card_view_mobile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#cecdcd"
                android:layout_margin="8dp"
                card_view:cardCornerRadius="10dp"
                android:layout_marginTop="140dp"
                android:layout_column="1"
                android:layout_row="1"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true">
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="40dp"
                    android:id="@+id/imageView_mobile"
                    android:scaleType="fitXY"
                    android:background="@drawable/iphone"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/id_mobile"
                    android:text="mobile  "
                    android:textSize="25dp"
                    android:textColor="#000000"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="50dp" />
            </android.support.v7.widget.CardView>



            <android.support.v7.widget.CardView
                android:id="@+id/card_view_home"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#cecdcd"
                android:layout_margin="8dp"
                card_view:cardCornerRadius="10dp"
                android:layout_marginTop="270dp"
                android:layout_column="1"
                android:layout_row="1"
                android:layout_below="@id/card_view_mobile"
               >
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="35dp"
                    android:id="@+id/imageView_home"
                    android:scaleType="fitXY"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/phone"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/id_home"
                    android:text="home  "
                    android:textSize="25dp"
                    android:textColor="#000000"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="60dp" />
            </android.support.v7.widget.CardView>



            <android.support.v7.widget.CardView
                android:id="@+id/card_view_whats"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#cecdcd"
                android:layout_margin="8dp"
                card_view:cardCornerRadius="10dp"
                android:layout_marginTop="380dp"
                android:layout_column="1"
                android:layout_row="1"
                >
                <ImageView
                    android:layout_width="45dp"
                    android:layout_height="40dp"
                    android:id="@+id/imageView_whats"
                    android:scaleType="fitXY"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/whats"
                    />
                <TextView

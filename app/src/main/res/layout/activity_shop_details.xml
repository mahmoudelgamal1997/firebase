<?xml version="1.0" encoding="utf-8"?>


    <RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#424242"
        android:fillViewport="true"

        >
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:id="@+id/imageView_shop"
            android:scaleType="fitXY"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/branches"
            android:textSize="14dp"
            android:textColor="#FFFFFF"
            android:layout_below="@id/imageView_shop"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="15dp"
            />

        <Spinner
            android:layout_width="220dp"
            android:layout_height="40dp"
            android:id="@+id/spinner_branch"
            android:layout_below="@+id/imageView_shop"
            android:gravity="center"
            android:textAlignment="center"
            android:layout_marginTop="40dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/spinner">
        </Spinner>

        <android.support.v7.widget.CardView
            android:id="@+id/card_view_mobile"
            android:layout_width="300dp"
            android:layout_height="170dp"
            android:background="#e0e0e0"
            android:layout_margin="20dp"
            card_view:cardCornerRadius="20dp"
            android:layout_marginTop="59dp"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:layout_below="@+id/spinner_branch"
          >


            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:id="@+id/id_Shop_details"
                android:text=" adress "
                android:gravity="center"
                android:textSize="14dp"
                android:textColor="#000000"
                android:background="#BDBDBD"
                />




            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="105dp"
                android:layout_marginLeft="20dp"
                android:background="@mipmap/mobile"
                          />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:id="@+id/id_mobile"
                android:layout_marginTop="111dp"
                android:layout_marginLeft="30dp"
                android:text ="mobile"
                android:gravity="center_horizontal"
                android:textSize="14dp"
                android:textColor="#000000"
                />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="65dp"
                android:layout_marginLeft="20dp"
                android:background="@mipmap/mapicon"
                android:id="@+id/id_map"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginTop="@dimen/_15sdp"
                android:text =""
                android:gravity="center"
                android:textSize="25dp"
                android:textColor="#000000"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/id_Shop_adress"
                android:layout_marginTop="68dp"
                android:layout_marginLeft="30dp"
                android:text ="adress"
                android:gravity="center"
                android:textSize="14dp"
                android:textColor="#000000"
                />






            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/imageView_facebook"
                android:background="@drawable/facebook"
                android:layout_marginTop="200dp"
                android:layout_marginLeft="10dp"
                android:layout_below="@id/id_map"
                android:visibility="invisible"

                />

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/instagram"
                android:id="@+id/imageView_instgram"
                android:layout_marginTop="200dp"
                android:layout_marginLeft="90dp"
                android:layout_below="@+id/id_map"
                android:visibility="invisible"

                />

        </android.support.v7.widget.CardView>


        <HorizontalScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/card_view_mobile"
            >


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="35dp"
                android:orientation="horizontal"
                >


                <Button
                    android:layout_width="20dp"
                    android:layout_height="40dp"
                    android:background="@mipmap/cursor"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"

                    />


                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:scaleType="fitXY"
                    android:layout_marginLeft="10dp"
                    android:id="@+id/imageView11"
                    />


                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:scaleType="fitXY"
                    android:layout_marginLeft="10dp"
                    android:id="@+id/imageView12"
                    />
                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:scaleType="fitXY"
                    android:layout_marginLeft="10dp"
                    android:id="@+id/imageView13"

                    />

                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:scaleType="fitXY"
                    android:layout_marginLeft="10dp"
                    android:id="@+id/imageView14"

                    />


                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:scaleType="fitXY"
                    android:layout_marginLeft="10dp"
                    android:id="@+id/imageView15"

                    />
                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:scaleType="fitXY"
                    android:layout_marginLeft="10dp"
                    android:id="@+id/imageView16"

                    />
                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:scaleType="fitXY"
                    android:layout_marginLeft="10dp"
                    android:id="@+id/imageView17"

                    />


                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:scaleType="fitXY"
                    android:layout_marginLeft="10dp"
                    android:id="@+id/imageView18"
                    />
                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:scaleType="fitXY"
                    android:layout_marginLeft="10dp"
                    android:id="@+id/imageView19"

                    />
                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:scaleType="fitXY"
                    android:layout_marginLeft="10dp"
                    android:id="@+id/imageView20"

                    />
                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:scaleType="fitXY"
                    android:layout_marginLeft="10dp"
                    android:id="@+id/imageView21"

                    />
                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:scaleType="fitXY"
                    android:layout_marginLeft="10dp"
                    android:id="@+id/imageView22"

                    />


            </LinearLayout>
        </HorizontalScrollView>

    </RelativeLayout>



